<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:viewBindingIgnore="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/signal_colorSurface2"
    android:minHeight="60dp"
    android:paddingHorizontal="@dimen/dsl_settings_gutter">

    <!-- Home -->

    <View
        android:id="@+id/home_tab_touch_point"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_tab_icon"
        app:layout_constraintStart_toStartOf="@id/home_tab_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/home_tab_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tabs_first_guide"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/ic_home_deselected" />

    <TextView
        android:id="@+id/home_tab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConversationListTabs__home"
        android:textAppearance="@style/Kahf.TextAppearance.Light.11"
        android:textColor="@color/kahf_bottomNavBar_selectedItemColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_tab_icon"
        app:layout_constraintStart_toStartOf="@id/home_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/home_tab_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/home_pill"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        android:src="@drawable/conversation_tab_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/home_tab_icon"
        app:layout_constraintEnd_toEndOf="@id/home_tab_icon"
        app:layout_constraintStart_toStartOf="@id/home_tab_icon"
        app:layout_constraintTop_toTopOf="@id/home_tab_icon"
        android:visibility="gone"/>

    <!-- Stories -->

    <View
        android:id="@+id/stories_tab_touch_point"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stories_tab_icon"
        app:layout_constraintStart_toStartOf="@id/stories_tab_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/stories_tab_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabs_first_guide"
        app:layout_constraintEnd_toStartOf="@id/tabs_second_guide"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/ic_stories_deselected"/>

    <TextView
        android:id="@+id/stories_tab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConversationListTabs__stories"
        android:textAppearance="@style/Kahf.TextAppearance.Light.11"
        android:textColor="@color/kahf_bottomNavBar_selectedItemColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stories_tab_icon"
        app:layout_constraintStart_toStartOf="@id/stories_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/stories_tab_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/stories_pill"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        android:src="@drawable/conversation_tab_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/stories_tab_icon"
        app:layout_constraintEnd_toEndOf="@id/stories_tab_icon"
        app:layout_constraintStart_toStartOf="@id/stories_tab_icon"
        app:layout_constraintTop_toTopOf="@id/stories_tab_icon"
        android:visibility="gone"/>

    <!-- Chat -->

    <View
        android:id="@+id/chats_tab_touch_point"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/chats_tab_icon"
        app:layout_constraintStart_toStartOf="@id/chats_tab_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/chats_tab_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabs_second_guide"
        app:layout_constraintEnd_toStartOf="@id/tabs_third_guide"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/ic_chat_deselected" />

    <TextView
        android:id="@+id/chats_tab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConversationListTabs__chats"
        android:textAppearance="@style/Kahf.TextAppearance.Light.11"
        android:textColor="@color/kahf_bottomNavBar_selectedItemColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/chats_tab_icon"
        app:layout_constraintStart_toStartOf="@id/chats_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/chats_tab_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/chats_pill"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:src="@drawable/conversation_tab_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/chats_tab_icon"
        app:layout_constraintEnd_toEndOf="@id/chats_tab_icon"
        app:layout_constraintStart_toStartOf="@id/chats_tab_icon"
        app:layout_constraintTop_toTopOf="@id/chats_tab_icon"
        android:visibility="gone"/>

    <!-- Prayers -->

    <View
        android:id="@+id/prayers_tab_touch_point"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/prayers_tab_icon"
        app:layout_constraintStart_toStartOf="@id/prayers_tab_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/prayers_tab_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tabs_third_guide"
        app:layout_constraintEnd_toStartOf="@id/tabs_last_guide"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/ic_prayers_deselected"/>

    <TextView
        android:id="@+id/prayers_tab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConversationListTabs__prayers"
        android:textAppearance="@style/Kahf.TextAppearance.Light.11"
        android:textColor="@color/kahf_bottomNavBar_selectedItemColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/prayers_tab_icon"
        app:layout_constraintStart_toStartOf="@id/prayers_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/prayers_tab_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/prayers_pill"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        android:src="@drawable/conversation_tab_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/prayers_tab_icon"
        app:layout_constraintEnd_toEndOf="@id/prayers_tab_icon"
        app:layout_constraintStart_toStartOf="@id/prayers_tab_icon"
        app:layout_constraintTop_toTopOf="@id/prayers_tab_icon"
        android:visibility="gone"/>

    <!-- Settings -->

    <View
        android:id="@+id/settings_tab_touch_point"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/settings_tab_icon"
        app:layout_constraintStart_toStartOf="@id/settings_tab_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/settings_tab_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabs_last_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/ic_settings_deselected" />

    <TextView
        android:id="@+id/settings_tab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EnableCallNotificationSettingsDialog__settings"
        android:textAppearance="@style/Kahf.TextAppearance.Light.11"
        android:textColor="@color/kahf_bottomNavBar_selectedItemColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/settings_tab_icon"
        app:layout_constraintStart_toStartOf="@id/settings_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/settings_tab_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/settings_pill"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:paddingHorizontal="16dp"
        android:src="@drawable/conversation_tab_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/settings_tab_icon"
        app:layout_constraintEnd_toEndOf="@id/settings_tab_icon"
        app:layout_constraintStart_toStartOf="@id/settings_tab_icon"
        app:layout_constraintTop_toTopOf="@id/settings_tab_icon"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tabs_first_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tabs_second_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tabs_third_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tabs_last_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


    <TextView
        android:id="@+id/chats_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_marginStart="28.5dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/tab_unread_circle"
        android:gravity="center_horizontal"
        android:minWidth="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textAppearance="@style/Signal.Text.Caption"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/chats_tab_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3" />

    <TextView
        android:id="@+id/stories_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_marginStart="28.5dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/tab_unread_circle"
        android:gravity="center_horizontal"
        android:minWidth="16sp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textAppearance="@style/Signal.Text.Caption"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/stories_tab_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="99+" />

</androidx.constraintlayout.widget.ConstraintLayout>
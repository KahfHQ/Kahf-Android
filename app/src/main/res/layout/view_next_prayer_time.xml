<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="34dp"
        android:paddingTop="44dp"
        android:paddingBottom="45dp"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:background="@drawable/home_page_next_prayer_banner">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notification_status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_prayer_unmuted"
                android:tint="#FFFFFF"
                android:background="@drawable/home_page_next_prayer_time_mute_icon_background"
                android:padding="8dp" />

            <TextView
                android:id="@+id/notification_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mute"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="7dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Prayer Time"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/prayer_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="6:39"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/prayer_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Magrib"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/prayer_remaining_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20 Minutes Left"
            android:textSize="11sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/all_prayer_time_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingVertical="13dp"
        android:drawableEnd="@drawable/all_prayer_times_button_icon"
        android:drawablePadding="11dp"
        android:text="All Prayer Time"
        android:textAllCaps="false"
        android:background="@drawable/home_page_next_prayer_time_btn_background"
        android:textColor="#3E8DFF"
        android:textSize="14sp"
        android:drawableTint="#3E8DFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>